

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://i.redd.it/dj4ostj229gb1.png);">
  <div class="container">
    <h1><strong>Save your</strong></h1>
    <h2><strong>Horror Movies</strong>!</h2>
  </div>
</div>


<div class="container mt-3">
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://c4.wallpaperflare.com/wallpaper/506/600/975/creepy-dark-evil-horror-wallpaper-preview.jpg'); background-size: cover; background-position: center; height: 180px;">
          <div class="card-body d-flex justify-content-center align-items-center">
            <h5 class="card-title">
              <%= link_to list.name, list_path(list), class: 'card-link' %>
            </h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class= "w-100 d-flex justify-content-center mt-3">
  <%= link_to 'Start New', new_list_path, class: 'btn btn-gradient' %>
</div>
